@inject IOptions<SiteSettings> SiteSettings
@{
    var title = SiteSettings.Value.SiteTitleShort + " | " + ViewData["Title"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="author" content="@SiteSettings.Value.SiteTitle">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@title</title>

    @await Html.PartialAsync("_Favicons")
    
    @await Html.PartialAsync("_SocialTags")

    @await Html.PartialAsync("_Styles")
</head>
<body class="d-flex flex-column h-100" >
    @await Html.PartialAsync("_Header")
        <main role="main" class="flex-column align-content-center align-content-center flex-fill">
            @RenderBody()
        </main>
    @await Html.PartialAsync("_Footer")
</body>
@await Html.PartialAsync("_Script")
</html>