@page
@model WebUI.Pages.MediaManager.IndexModel
@{
    ViewData["Title"] = "Media Manager";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center my-5 g-2">
        <div class="col-12 col-md-8 ">
            <div class="row d-flex flex-column align-items-center justify-content-center">
                <div class="thumbnail rounded-circle">
                    <div class="caption ">
                        <a href="#" id="change-link" 
                           class="text-wrap label d-block p-2  text-light w-100 h-100" 
                           data-toggle="tooltip" 
                           data-placement="top" 
                           title="Profile">
                            <span class="fa fa-camera"></span>
                            <span class="d-block text-small">
                                Profile
                            </span>
                        </a>
                    </div>
                    <img src="~/dist/images/_ava.png" id="logo-preview" class="w-100 h-100" alt="Profile" />
                </div>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-5 g-2">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-around align-items-center align-content-around">
            <div >
                <h2 class="h4">Integeration with Tinymce</h2>
                <p style="font-size: medium" class="text-grey">
                    Please click Insert Image button
                    <span class="tox-icon tox-tbtn__icon-wrap"><svg width="24" height="24" focusable="false"><path d="m5 15.7 3.3-3.2c.3-.3.7-.3 1 0L12 15l4.1-4c.3-.4.8-.4 1 0l2 1.9V5H5v10.7ZM5 18V19h3l2.8-2.9-2-2L5 17.9Zm14-3-2.5-2.4-6.4 6.5H19v-4ZM4 3h16c.6 0 1 .4 1 1v16c0 .6-.4 1-1 1H4a1 1 0 0 1-1-1V4c0-.6.4-1 1-1Zm6 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" fill-rule="nonzero"></path></svg></span>
                    , Then click Source button
                    <span class="tox-icon tox-tbtn__icon-wrap"><svg width="24" height="24" focusable="false"><path d="M19 4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2h-4v-2h4V8H5v10h4v2H5a2 2 0 0 1-2-2V6c0-1.1.9-2 2-2h14Zm-8 9.4-2.3 2.3a1 1 0 1 1-1.4-1.4l4-4a1 1 0 0 1 1.4 0l4 4a1 1 0 0 1-1.4 1.4L13 13.4V20a1 1 0 0 1-2 0v-6.6Z" fill-rule="nonzero"></path></svg></span>
                    to show the gallery manager
                </p>
            </div>
           
            <img src="@Url.Content("~/dist/images/InserImage.png")" height="200"/>

        </div>
    </div>
    <div class="row d-flex justify-content-center my-5">
        
        <div  class="col-12 ">
            <textarea id="blog-content">
                                
            </textarea>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ModalMediaManager")